import java.util.Scanner;

public class sort3
{
    public static void main(String[] args)
    {
        final int AMOUNT_OF_NUMS = 3;
        int[] xyz = new int[AMOUNT_OF_NUMS];
        Scanner scanner = new Scanner(System.in);
        for (int i = 0; i < xyz.length; i ++)
        {
            System.out.printf("Enter a number: ");
            xyz[i] = scanner.nextInt();
        }

        for (int i = 0; i < xyz.length; i++)
        {
            for (int j = 1; j < xyz.length - i; j ++)
            {
                if (xyz[j - 1] > xyz[j])
                {
                    int temp = xyz[j - 1];
                    xyz[j - 1] = xyz[j];
                    xyz[j] = temp;
                }
            }
        }

        for (int i = 0; i < xyz.length; i ++)
        {
            System.out.printf("\n");
            System.out.printf("%d", xyz[i]);
        }
    }
}
